<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.mapper.Com_bureauMapper">

	<select id="read" resultType="Com_bureauVO">
		select bureau_cd,bureau_name,bureau_use 
		from com_bureau
		where 
		bureau_cd = #{bureau_cd}
	</select>

	<insert id="create">
		insert into com_bureau
		(bureau_cd,bureau_name,bureau_use) values
		(#{bureau_cd},#{bureau_name},#{bureau_use})
	</insert>

	<update id="update">
		update com_bureau set
		bureau_name = #{bureau_name}, bureau_use = #{bureau_use} 
		where
		bureau_cd = #{bureau_cd}
	</update>

	<delete id="delete">
		delete from com_bureau where bureau_cd = #{bureau_cd}
	</delete>

	<select id="listAll" resultType="Com_bureauVO">
 		<![CDATA[ select * from com_bureau]]>
	</select>

</mapper>